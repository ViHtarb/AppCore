<resources>

    <!--Base themes for app-->
    <style name="Base.V14.Theme.AppCore" parent="Theme.MaterialComponents.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCore.Toolbar</item>
    </style>

    <style name="Base.V14.Theme.AppCore.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCore.Toolbar</item>
    </style>

    <style name="Base.Theme.AppCore" parent="Base.V14.Theme.AppCore"/>
    <style name="Base.Theme.AppCore.Light" parent="Base.V14.Theme.AppCore.Light"/>

    <style name="Theme.AppCore" parent="Base.Theme.AppCore"/>
    <style name="Theme.AppCore.Light" parent="Base.Theme.AppCore.Light"/>
    <!--Base themes for app-->

    <style name="Widget.AppCore.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.AppCore.TabLayout" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:id">@id/tab_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
    </style>
</resources>