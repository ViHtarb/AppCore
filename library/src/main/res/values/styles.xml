<resources>

    <!--Base themes for app-->
    <style name="Base.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="editTextBackground">@drawable/edit_text_material</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextBackground">@drawable/edit_text_material</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>
    <style name="AppTheme.Light" parent="Base.AppTheme.Light"/>
    <!--Base themes for app-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:id">@id/tab_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
    </style>
</resources>