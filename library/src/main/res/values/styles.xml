<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:id">@id/tab_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
    </style>
</resources>